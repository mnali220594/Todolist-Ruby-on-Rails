<br>
<table class="table table-bordered text-center">
  <thead>
    <tr>
      <th>Todo Item</th>
      <th>Completed</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="bg-success">
          <td class="striker"><%= list.description %></td>
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, id: :list_description, type: 'hidden' %>
              <%= f.check_box :completed, id: :list_completed, :checked => false, :style => 'visibility: hidden' %>
              <%= f.submit "Unchecked", class: 'btn btn-outline-secondary' %>
            <% end %>
          </td>
          <% link_to 'Show', list %>
          <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-info' %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% else %>
        <tr>
          <td><%= list.description %></td>
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, id: :list_description, type: 'hidden' %>
              <%= f.check_box :completed, id: :list_completed, :checked => true, :style => 'visibility: hidden' %>
              <%= f.submit "Checked", class: 'btn btn-outline-secondary' %>
            <% end %>
          </td>
          <% link_to 'Show', list %>
          <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-info' %></td>
          <td><%= link_to 'Delete', list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
<% link_to 'Add Todo Item', new_list_path, class:"btn btn-success" %>
<br>
<br>
<center>
  <%= link_to 'Deleted Completed Todo', home_trash_em_path, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Deleted All Todos', home_trash_em_all_path, class: 'btn btn-outline-danger', data: { confirm: 'Are you sure?' } %>
</center>
